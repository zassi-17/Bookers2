<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
	      <tr>
	        <td><%= image_tag 'no_image.jpg' %></td>
        </tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>

          <h4>Opinion</h4>
            <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>User</h2>
      <table class='table table-hover table-inverse'>
        <thead>
	        <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(80,80) %></td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user) %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
            
