<div class='container'>
  <div class="d-flex flex-column">
    <div class="d-flex justify-content-center">

<%= form_with(model: @user, local: true) do |f| %>
  <h2>User info</h2>

  <div class="mb-3">
  <label for="inputName">Name</label>
  <%= f.text_field :name, class: "form-control", autofocus: true, id: "inputName", placeholder: "名前" %>
  </div>
  <div class="mb-3">
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, class: "mb-3", placeholder: "ファイルを選択", accept: "image/*" %>
  </div>
  <div class="mb-3">
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_field :introduction, class: "form-control", autofocus: true, id: "inputIntroduction" %>
  </div>
  <%= f.submit "Update User", class: "btn btn-secondary" %>

<% end %>
