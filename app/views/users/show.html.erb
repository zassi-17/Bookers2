<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
	      <tr>
	        <td><%= image_tag 'no_image.jpg' %></td>
        </tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

      <div class='col-md-3'>
        <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-lg" do %>
        <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>

          <h4>Opinion</h4>
            <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class='col-md-8 offset-md-1'>
    
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><span><%= link_to book.title, book_path(book) %></span></td>
                <td><span><%= book.body %></span></td>
              </tr>
            <% end %>
	        </tbody>
	    </table>
      </div>
	  </div>
	</div>
</div>

