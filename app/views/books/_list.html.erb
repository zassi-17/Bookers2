      <h2>User info</h2>
      <table class='table'>
	      <tr>
	        <td><% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image.variant(resize_to_limit: [100,100]) %>
              <% else %>
              <%= image_tag 'no_image.jpg',size:"100x100" %>
              <% end %>
          </td>
          </tr>
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>

      <div class='col-md-3'>
        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-lg" do %>
        <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
        <%= form_with model: @new_book, local: true do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>

          <h4>Opinion</h4>
            <%= f.text_area :body %>

          <%= f.submit 'Create Book', class:"btn btn-outline-secondary" %>
          
        <% end %>
    
      
