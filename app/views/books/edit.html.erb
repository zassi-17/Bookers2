<div class='container'>
  <div class="d-flex flex-column">
    <div class="d-flex justify-content-center">
<%= form_with model: @book, local: true do |f| %>

  <h1>Editing Book</h1>

  <h5>Title</h5>
  <%= f.text_field :title, class: "form-control mb-3" %>

  <h5>Opinion</h5>
  <%= f.text_area :body , class: "form-control mb-3" %>

  <div class="mt-3">
  <%= f.submit 'Update Book', class: "btn btn-outline-secondary" %>
  </div>

  <div class="mt-3 d-flex align-items-center">
  <%= link_to "Show", book_path(@book.id), class: "text-decoration-none text-primary" %>
  <div class="border-start mx-2" style="height: 24px;"></div>
  <%= link_to "Back", books_path, class: "text-decoration-none text-primary" %>
  </div>
<% end %>
    </div>
  </div>
</div>
  