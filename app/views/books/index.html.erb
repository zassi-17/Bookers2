<h1>Books</h1>

  <% @books.each do |book| %>

<table>
  <tr>
  <th>Title</th>
  <th>Opinion</th>
  </tr>
  <tr>
  <td><%= image_tag 'sample-author1.jpg' %></td>
  <td><span><%= link_to book.title, book_path(book) %></span></td>
  <td><span><%= book.body %></span></td>
  </tr>
</table>

  <% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

